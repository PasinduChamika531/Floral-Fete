        <activity
            android:name=".SingleProductViewActivity"
            android:exported="false" />
        <activity
            android:name=".drawer2.AdminPanelActivity"
            android:exported="false" />
        <activity
            android:name=".drawer.UserProfileActivity"
            android:exported="false" />
        <activity
            android:name=".UserSigninActivity"
            android:exported="false" />
        <activity
            android:name=".UserSigupActivity"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="false"
            android:launchMode="singleTop" />

        <receiver
            android:name=".utils.NetworkChangeReceiver"
            android:exported="true">
            <intent-filter>
                <action android:name="android.net.conn.CONNECTIVITY_CHANGE" />
            </intent-filter>
        </receiver>

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyBgh30GCJKfRM3n4HA_N2p0lajwtOiWgzQ" />
