<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SingleProductViewActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:layout_scrollFlags="scroll|enterAlways">


        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white"
            app:navigationIcon="@drawable/ic_arrow_backs"
            />
    </com.google.android.material.appbar.AppBarLayout>


    <!-- Main ScrollView for Product Details -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="60dp"
        android:background="@color/white"
        android:clipToPadding="false"
        android:scrollbars="none"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Image Slider -->
            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/productImageViewPager"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:clipChildren="false"
                android:clipToPadding="false" />

            <!-- Image Dots Indicator -->
            <com.google.android.material.tabs.TabLayout
                android:id="@+id/imageIndicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:background="@color/white"
                app:tabIndicatorAnimationMode="elastic"
                app:tabIndicatorColor="@color/theme_color"
                app:tabIndicatorGravity="center" />

            <!-- Product Name -->
            <TextView
                android:id="@+id/productName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="16dp"
                android:fontFamily="@font/cherryswash_regular"
                android:paddingTop="8dp"
                android:text="Product Name"
                android:textSize="20sp"
                android:textStyle="bold" />

            <!-- Product Price -->
            <TextView
                android:id="@+id/productPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/cherryswash_bold"
                android:paddingTop="4dp"
                android:text="â‚¹999"
                android:textColor="@color/theme_color"
                android:textSize="34sp"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="16dp"
                android:background="@color/gray" />

            <!-- Available Quantity -->
            <TextView
                android:id="@+id/productAvailableQty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="16dp"
                android:fontFamily="@font/cherryswash_regular"
                android:text="Available: 10"
                android:textColor="@color/dark_gray"
                android:textSize="16sp" />

            <!-- Quantity Selector (Stepper) -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="16dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/decreaseQuantity"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:backgroundTint="@android:color/transparent"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    app:icon="@drawable/ic_minus"
                    app:iconGravity="top"
                    app:iconTint="@color/black" />

                <TextView
                    android:id="@+id/quantityText"
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:text="1"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/increaseQuantity"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:backgroundTint="@android:color/transparent"
                    android:text="+"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    app:icon="@drawable/ic_plus"
                    app:iconGravity="top"
                    app:iconTint="@color/black" />
            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="20dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="16dp"
                android:fontFamily="@font/cherryswash_bold"
                android:text="@string/single_product_text2"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/productFlowerType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="16dp"
                android:backgroundTint="@color/box_theme_color2"
                android:fontFamily="@font/cherryswash_regular"
                android:padding="10dp"
                android:text="Flower Type"
                android:textColor="@color/black"
                app:cornerRadius="10dp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="16dp"
                            android:background="@color/gray" />

            <!-- Product Description -->

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="20dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="16dp"
                android:text="@string/single_product_text3"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/productDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="16dp"
                android:fontFamily="@font/cherryswash_regular"
                android:paddingStart="10dp"
                android:paddingTop="10dp"
                android:text="Product description goes here."
                android:textSize="14sp" />

<!--            <View-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="1dp"-->
<!--                android:layout_marginTop="16dp"-->
<!--                android:background="@color/gray" />-->
            <View
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:layout_marginTop="16dp"
                android:background="@color/light_gray" />

            <!-- Feedback Section -->

            <TextView
                android:id="@+id/feedbackSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="16dp"
                android:fontFamily="@font/cherryswash_bold"
                android:paddingTop="2dp"
                android:text="@string/single_product_text4"
                android:textSize="18sp"
                android:textStyle="bold" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/feedbackRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:nestedScrollingEnabled="false"
                android:paddingTop="4dp" />

        </LinearLayout>
    </ScrollView>

    <!-- Footer Layout (Fixed Buttons) -->
    <LinearLayout
        android:id="@+id/footerLayout"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_gravity="bottom"
        android:background="@color/white"
        android:elevation="8dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="8dp">

<!--        <Button-->
<!--            android:id="@+id/addToWishlistButton"-->
<!--            android:layout_width="0dp"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_weight="1"-->
<!--            android:background="@android:color/transparent"-->
<!--            android:textColor="@color/white"-->
<!--            app:icon="@drawable/ic_empty_heart"-->
<!--            app:iconGravity="top"-->
<!--            app:iconSize="40dp"-->
<!--            app:iconTint="@color/black" />-->
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/likeButton"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:lottie_rawRes="@raw/heart_animation"
            app:lottie_autoPlay="false"
            app:lottie_loop="false"
            app:lottie_progress="0"/>


        <Button
            android:id="@+id/addToCartButton"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="3"
            android:backgroundTint="@color/theme_color"
            android:fontFamily="@font/cherryswash_bold"
            android:text="Add to Cart"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
