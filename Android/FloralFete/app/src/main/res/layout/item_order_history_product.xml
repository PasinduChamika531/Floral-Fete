<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    android:background="@color/white"
    android:elevation="2dp">

    <!-- Product Image -->
    <ImageView
        android:id="@+id/order_history_product_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_orchids" />

    <!-- Product Details -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingStart="8dp">

        <!-- Product Name -->
        <TextView
            android:id="@+id/order_history_product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/cherryswash_bold"
            android:text="Product Name"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <!-- Product Price -->
        <TextView
            android:id="@+id/order_history_product_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rs. 299.00"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:paddingTop="2dp"/>

        <!-- Quantity -->
        <TextView
            android:id="@+id/order_history_product_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="2dp"
            android:text="Qty: 2"
            android:textColor="@color/dark_gray"
            android:textSize="14sp" />
    </LinearLayout>

    <!-- Give Feedback Button -->
    <Button
        android:id="@+id/order_history_feedback_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:backgroundTint="@color/theme_color"
        android:fontFamily="@font/cherryswash_bold"
        android:padding="8dp"
        android:text="Give Feedback"
        android:textColor="@color/white"
        android:textSize="12sp" />
</LinearLayout>
