<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="2dp"
    android:background="?android:attr/selectableItemBackground"
    android:orientation="horizontal"
    android:padding="12dp">

    <!-- Product Image -->
    <ImageView
        android:id="@+id/itempopup_product_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="12dp"
        android:scaleType="centerCrop" />

    <!-- Product Name and Price -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/itempopup_product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="@font/cherryswash_bold"
            android:maxLines="1"
            android:text="Product Name"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/itempopup_product_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/cherryswash_regular"
            android:text="Price"
            android:textColor="@android:color/darker_gray"
            android:textSize="14sp" />
    </LinearLayout>

    <!-- Product Quantity -->
    <TextView
        android:id="@+id/itempopup_product_quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:fontFamily="@font/cherryswash_regular"
        android:text="Qty: 1"
        android:textColor="@android:color/darker_gray"
        android:textSize="14sp" />

</LinearLayout>
