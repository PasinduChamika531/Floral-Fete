<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/admin_panel_header"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/backgroud_flower">

    <androidx.cardview.widget.CardView
        android:id="@+id/admin_panel_imagecard1"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        app:cardCornerRadius="60dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/admin_panel_image1"
            android:layout_width="120dp"
            android:layout_height="120dp"
            app:srcCompat="@drawable/ic_user_profile" />
    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/admin_panel_text1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/cherryswash_bold"
        android:text="@string/admin_panel_header_text1"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/admin_panel_imagecard1"
        app:layout_constraintTop_toBottomOf="@+id/admin_panel_imagecard1" />

    <TextView
        android:id="@+id/admin_panel_text2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/cherryswash_regular"
        android:text="@string/admin_panel_header_text2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/admin_panel_text1"
        app:layout_constraintStart_toStartOf="@+id/admin_panel_text1"
        app:layout_constraintTop_toBottomOf="@+id/admin_panel_text1" />
</androidx.constraintlayout.widget.ConstraintLayout>