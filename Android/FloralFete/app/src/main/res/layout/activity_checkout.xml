<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/cherryswash_bold"
        android:paddingTop="8dp"
        android:layout_margin="16dp"
        android:text="@string/checkout_text1"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold" />

    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@color/light_gray" />

    <!-- Address Section -->
    <LinearLayout
        android:id="@+id/address_section"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_user_address"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/cherryswash_regular"
            android:text="Your Address"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <Button
            android:id="@+id/button_change_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:backgroundTint="@android:color/transparent"
            app:icon="@drawable/ic_edit"
            app:iconGravity="end"
            app:iconSize="20dp"
            app:iconTint="@color/black" />

    </LinearLayout>

    <!-- Delivery Date Selector -->
    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@color/light_gray" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/cherryswash_regular"
        android:paddingTop="12dp"
        android:text="@string/single_product_text1"
        android:textSize="16sp" />

    <Button
        android:id="@+id/selectDeliveryDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="@color/home_background_color"
        android:fontFamily="@font/cherryswash_bold"
        android:text="Choose Date"
        android:textColor="@color/theme_color"
        app:cornerRadius="10dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:layout_marginTop="10dp"
        android:background="@color/light_gray" />

    <!-- Cart Items Section -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_checkout_cart"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_weight="1"
        android:overScrollMode="never"
        android:paddingTop="10dp" >

    </androidx.recyclerview.widget.RecyclerView>



    <!-- Order Summary -->
    <View
        android:id="@+id/divider2"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="?android:attr/listDivider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="16dp"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_subtotal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/cherryswash_regular"
            android:text="Subtotal: $0.00"
            android:textAlignment="textEnd"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/text_shipping"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/cherryswash_regular"
            android:text="Shipping: $5.00"
            android:textAlignment="textEnd"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/text_total_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/cherryswash_bold"
            android:text="Total: $0.00"
            android:textAlignment="textEnd"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Place Order Button -->
    <Button
        android:id="@+id/button_place_order"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/theme_color"
        android:fontFamily="@font/cherryswash_bold"
        android:text="Place Order"
        android:textColor="@color/white"
        android:textSize="18sp" />
</LinearLayout>
